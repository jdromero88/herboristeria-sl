{
  "name": "herboristeria",
  "version": "1.0.0",
  "description": "Herboristeria Santa Lucia donde encontraras todos los productos naturales.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdromero88/herboristeria-sl"
  },
  "lint-staged": {
    "*.{js,tsx}": [
      "./node_modules/.bin/eslint --fix"
    ],
    "*.{scss,less,sass,css}": [
      "./node_modules/.bin/stylelint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "lint-css": "npx stylelint \"**/*.scss\" ",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start-eleventy": "eleventy --watch --serve",
    "css-build": "sass ./src/assets/scss/main.scss ./src/style.css",
    "css-watch": "sass --watch ./src/assets/scss/main.scss ./src/style.css",
    "dev": "npm-run-all --parallel css-watch start-eleventy",
    "start": "npm run dev"
  },
  "keywords": [],
  "author": "Jose Romero",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.26.10",
    "stylelint": "^13.9.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.17.1"
  }
}
